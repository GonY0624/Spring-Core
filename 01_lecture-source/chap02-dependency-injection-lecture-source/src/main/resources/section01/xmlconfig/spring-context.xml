<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean 태그 클래스 속성은 인터페이스 타입이 아닌 실제 구현체 클래스 타입으로 작성해야 한다.  -->
    <bean id="account" class="com.ohgiraffers.common.PersonalAccount">
        <constructor-arg index="0" value="10"/>
        <constructor-arg index="1" value="010-4936-9948"/>
    </bean>

    <!-- 생성자를 통합 주입  -->
    <bean id="member" class="com.ohgiraffers.common.MemberDTO">
        <constructor-arg name="sequence" value="1"/>
        <constructor-arg name="name" value="정고은"/>
        <constructor-arg name="phone" value="010-4936-9948"/>
        <constructor-arg name="email" value="goeun990@naver.com"/>
        <constructor-arg name="personalAccount">
            <ref bean="account"/>
        </constructor-arg>
    </bean>

